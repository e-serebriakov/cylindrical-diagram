color-bottom-sign = rgba(0, 0, 0, .5);
color-top-sign = #595959;

.cylinder
  position: relative;
  display: flex;
  flex-grow: 1;
  align-items flex-end;
  height: 100%;
  max-height: 0;
  margin: 0 15px;
  transition: max-height .5s ease-out .5s;

  &--height
    for num in (0..100)
      &_{num}
        max-height: num + '%';

  &__shape
    height 100%;
    width: 100%;
    background #34e89e;
    background: linear-gradient(-45deg, #0f3443, #34e89e);

    &--opacity
      for num in (0..100)
        &_{num}
          opacity: (num / 100);

  &__sign
    position: absolute;
    opacity: 1;

    &--top
      top: -60px;
      color: color-top-sign;

    &--bottom
      bottom: -80px;
      color: color-bottom-sign;
