color-bottom-sign = rgba(0, 0, 0, .5);
color-top-sign = #595959;

.cylinder
  position: relative;
  z-index: 50;
  display: flex;
  flex-grow: 1;
  align-items flex-end;
  height: 100%;
  max-width: 150px;
  margin: 0 15px;
  transition: max-height .75s cubic-bezier(0.435, 0.305, 0.335, 1.295);

  &--height
    for num in (0..100)
      &_{num}
        max-height: num + '%';

  &--folded
    max-height: 0;

  &__shape
    z-index: 50;
    position: relative;
    height 100%;
    width: 100%;
    background #34e89e;
    background: linear-gradient(-90deg, #0f3443, #34e89e);

  &__glare
    position: absolute;
    left: 0;
    z-index: 20;
    width: 100%;
    height: 25px;
    content: '';
    border-radius: 50%/45%;
    top: 0;
    transform: translateY(-45%);
    background-color: white;
    background: linear-gradient(-90deg, rgba(255, 255, 255, .9), #34e89e);

  &__cap
    position: absolute;
    left: 0;
    width: 100%;
    height: 25px;
    content: '';
    border-radius: 50%/45%;
    background #34e89e;

    &--top
      top: 0;
      transform: translateY(-50%);
      z-index: 100;
      background-color: #32d190;

    &--bottom
      bottom: 0;
      transform: translateY(50%);
      z-index: 10;
      background: linear-gradient(-90deg, #0f3443, #34e89e);
      box-shadow: 15px 6px 12px -5px #333, 0px 3px 3px -2px #333;

  &__sign
    position: absolute;
    left: 50%;
    margin: 0;
    text-align: center;
    opacity: 1;

    &--top
      top: 0;
      left: 0;
      transform: translateY(-200%);
      color: #595959;
      width: 100%;

    &--bottom
      bottom: 0;
      transform: translate(-50%, 250%);
